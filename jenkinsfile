pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                   git url: 'https://github.com/breck100/WOG.git', branch: 'master'
              }
        }
        stage('Build') {
            steps {
                dir('Scores') {
                    bat 'docker-compose build'
                }
            }
        }

        stage('Run') {
            steps {
                dir('Scores') {
                    bat 'docker-compose up -d'
                }
            }
        }

        stage('Test') {
            steps {
                dir('tests') {
                    bat 'winpty docker-compose exec -it flask_app python3 e2e.py'
                }
            }
        }
        stage('Finalize') {
            steps {
                dir('Scores') {
                    bat 'docker login'
                    bat 'docker-compose down --remove-orphans'
                    bat 'docker-compose push'
                }
            }
        }
    }
}

